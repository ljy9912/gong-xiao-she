<!--pages/shopping/shopping.wxml-->
<!--列表页-->

<view class="item" data-pname="{{p.name}}" data-des="{{p.des}}" data-price="{{p.price}}" data-imgid="{{p.imgID}}" data-imgurl="{{p.imgUrl}}" data-id="{{p.id}}" bindtap="goDetail" wx:for="{{list}}" wx:key="name" wx:for-item="p">
  <view class="img">
    <image src="{{p.imgUrl}}" mode="aspectFit" />
  </view>
  <view class="con">
    <view class="nm">{{p.name}}</view>
    <view class="des">{{p.des}}</view>
    <view class="sub">￥
      <text>{{p.price}}</text>
    </view>
  </view>
</view>