<view wx:if="{{loaded}}" class="c">
  <view class="m">
    <swiper indicator-dots="true" autoplay="false" current="0" circular="false" duration="400" class="hd">
      <block wx:for="{{imgMinList}}" wx:for-item="url" wx:key="*this">
        <swiper-item data-index="{{index}}" catchtap="previewImg">
          <image src="{{url}}" class="slide-image" />
        </swiper-item>
      </block>
    </swiper>
    <view class="tit">{{name}}</view>
    <view class="des">{{des}}</view>
    <view class="pp">
      <view class="price">￥
        <text>{{(current.price*num)}}</text>
      </view>
    </view>
    <view class="size">
      <view class="sitem {{current.size==s.size?'sitem-on':'sitem-out'}}" data-size="{{s.size}}" data-price="{{s.price}}" data-supplyno="{{s.num}}" data-imgid="{{s.imgID}}" catchtap="changeCurrent" wx:for="{{type}}" wx:for-item="s" wx:key="des">
        <text>{{s.size}}</text>
      </view>
    </view>
    <!-- <view class="sm">主要原料：
      <text>{{resource}}</text>
    </view>
    <view class="sm">贮存条件：
      <text>{{fresh}}</text>
    </view> -->
  </view>
  <view class="tool">
    <view class="tbtn add" catchtap="addCart">加入购物车(<text class="cart-num">{{cartNum}}</text>)</view>
    <view class="tbtn buy" catchtap="_go">购买等额优惠券</view>
  </view>
</view>